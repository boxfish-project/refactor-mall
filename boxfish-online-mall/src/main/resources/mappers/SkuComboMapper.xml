<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.boxfishedu.online.mall.mappers.SkuComboMapper">
    <select id="selectAllCom" resultMap="allCombos">
        SELECT
            c.*, v.*, v.id AS id2,
            v.create_time AS createTime2,
            v.update_time AS updateTime2,
            v.original_price AS originalPrice2
        FROM
            product_sku_combo c,
            product_sku_value v
        WHERE
            c.sku_id = v.id
    </select>
    <resultMap type="com.boxfishedu.online.mall.entity.ProductSkuCombo" id="allCombos">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="sku_id" property="skuId"/>
        <result column="sku_amount" property="skuAmount"/>
        <result column="sku_cycle" property="skuCycle"/>
        <result column="actual_price" property="actualPrice"/>
        <result column="original_price" property="originalPrice"/>
        <association property="serviceSKU" javaType="com.boxfishedu.online.mall.entity.ProductSkuValue">
            <id column="id2" property="id"/>
            <result column="createTime2" property="createTime"/>
            <result column="updateTime2" property="updateTime"/>
            <result column="sku_code" property="skuCode"/>
            <result column="sku_name" property="skuName"/>
            <result column="count_unit" property="countUnit"/>
            <result column="original_price2" property="originalPrice"/>
            <result column="description" property="description"/>
            <result column="deadline" property="deadline"/>
            <!--<result column="service_type" property="serviceType"/>-->
            <result column="flag_enable" property="flagEnable"/>
            <result column="flag_visible" property="flagVisible"/>
            <result column="valid_day" property="validDay"/>
        </association>
    </resultMap>
</mapper>